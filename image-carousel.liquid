{%- style -%}
  #shopify-section-{{ section.id }} {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    #shopify-section-{{ section.id }} {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }

img-carousel{
    display:block;
    overflow:hidden
}
img-carousel.img-carousel{
    margin-top:24px
}
@media (min-width: 576px){
    img-carousel.img-carousel{
        margin-top:48px
    }
}
@media (min-width: 992px){
    img-carousel.img-carousel{
        margin-top:80px
    }
}
img-carousel .img-carousel__container{
    display:flex
}
img-carousel .img-carousel__images{
    -webkit-animation-name:animate;
    animation-name:animate;
    -webkit-animation-iteration-count:infinite;
    animation-iteration-count:infinite;
    -webkit-animation-timing-function:linear;
    animation-timing-function:linear;
    -webkit-animation-duration:var(--imgSpeed);
    animation-duration:var(--imgSpeed);
    display:flex
}
img-carousel .img-carousel__image{
    flex:0 0 150px;
    width:150px;
    height:175px;
    -webkit-user-select:none;
    -moz-user-select:none;
    -ms-user-select:none;
    user-select:none;
    position:relative
}
@media (min-width: 768px){
    img-carousel .img-carousel__image{
        flex:0 0 180px;
        width:180px;
        height:210px
    }
}
@media (min-width: 992px){
    img-carousel .img-carousel__image{
        flex:0 0 258px;
        width:258px;
        height:301px
    }
}
img-carousel .img-carousel__image.empty{
    background-color:#f7f7f9;
    border-right:1px solid #E2E2EA
}
img-carousel .img-carousel__image.empty:before{
    content:"6:7";
    left:16px;
    bottom:16px;
    position:absolute;
    font-family:FuturaPT-Heavy,sans-serif;
    font-weight:400;
    -webkit-font-smoothing:antialiased;
    -moz-osx-font-smoothing:grayscale;
    color:#e2e2ea;
    font-size:30px;
    line-height:30px
}
@media (min-width: 576px){
    img-carousel .img-carousel__image.empty:before{
        font-size:35px;
        line-height:35px
    }
}
img-carousel .img-carousel__image-column{
    position:absolute;
    top:0;
    right:0;
    bottom:0;
    left:0;
    display:block
}
img-carousel .img-carousel__image-column img{
    display:block;
    width:100%;
    height:auto;
    pointer-events:none;
    opacity:0;
    transition:opacity .32s ease
}
img-carousel .img-carousel__image-column img.lazyloaded{
    opacity:1;
  height: 100%;
}
.img-carousel__image-column:hover{
    opacity:0.8;

}
@-webkit-keyframes animate{
    to{
        -webkit-transform:translateX(-100%);
        transform:translate(-100%)
    }
}
@keyframes animate{
    to{
        -webkit-transform:translateX(-100%);
        transform:translate(-100%)
    }
}
{%- endstyle -%}



